@model IEnumerable<WebParaMelvin.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Nuevos Usuarios", "NewUser")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Password)
        </th>
        <th>
            Rol
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @string.Format("*******",item.Password)
        </td>
        <td>
            @{ switch (item.id_rol)
                {
                    case 1: <span>Administrador</span>
                        break;
                    case 2: <span>Doctor</span>
                        break;
                    case 3: <span>Empresa</span>
                        break;
                    case 4: <span>Supervisor</span>
                        break;
                    case 5: <span>Bloqueado</span>
                        break;


                }
            }
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.Id_usuario }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.Id_usuario }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.Id_usuario })
        </td>
    </tr>
}

</table>
